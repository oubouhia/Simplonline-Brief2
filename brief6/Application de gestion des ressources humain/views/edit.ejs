					type="text" 
					class="form-control" 
					id="local" 
					name="local"
					value="<%= data.local %>"
					placeholder="type the title..."
				/>
				<label for="desc">Description</label>
				<input 
					type="text" 
					class="form-control" 
					id="desc" 
					name="desc",
					value="<%= data.desc %>"
					placeholder="type the title..."
				/>
